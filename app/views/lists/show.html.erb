 <div class="container-btn mb-30 fr mr-30">
  <%= link_to new_list_bookmark_path(@list) do %>
    <div class="btn">Add a movie</div>
  <% end %>
  </div>

<div class="container-movie ml-30">
  <div class="card-movie">
    <% @list.movies.each do |movie|  %>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <%= image_tag(movie.poster_url, height: 250, width: 200) %>
        <h3><%= movie.title %></h3>
        <p><%= movie.overview %></p>
      <div class="d-flex align-items-end justify-content-between pt-4">
        <div>
          <i class="fas fa-quote-left me-2"></i><small class="flex-grow-1"><%= bookmark.comment %></small>
        </div>
          <small class="text-right flex-shrink-0"><%= link_to "delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}, class: 'btn' %></small>
      </div>
      <% end %>
  </div>

</div>
